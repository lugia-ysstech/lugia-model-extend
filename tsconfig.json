{
  "compilerOptions": {
    "module": "es2020",
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "target": "es6",
    "outDir": "dist",
    "importHelpers": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext", "dom"],
    "types": ["jest"],
    "noImplicitAny": true
  },
  "exclude": ["dist"],
  "include": ["src/**/*"]
}
